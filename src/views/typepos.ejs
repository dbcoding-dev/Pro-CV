<%- include('./components/head'); -%>

    <body>
        <div class="content-wrapper bg-light">
            <%- include('./components/header'); -%>

                <section class="wrapper gradient-8 bg-lines">
                    <div class="container pt-17 pt-md-19 text-center">
                        <div class="row">
                            <div class="col-lg-10 col-xl-9 col-xxl-8 mx-auto" data-cues="zoomIn" data-group="page-title"
                                data-interval="-200" data-delay="500">
                                <h1 class="display-1 fs-68 lh-xxs mb-8 text-white">
                                    Ödeme Yöntemi Seçiniz
                            </div>
                        </div>
                    </div>
                </section>

                <section class="wrapper bg-light">
                    <div class="container">
                        <section class="wrapper bg-light">
                            <div class="container py-14 py-md-16">
                                <div
                                    class="row row-cols-2 row-cols-md-3 row-cols-xl-2 gx-lg-6 gy-6 justify-content-center">
                                    <% pos.forEach(p=> { %>
                                        <% if (p.status) { %> <!-- Sadece aktif olanları göster -->
                                            <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 mb-4">
                                                <div class="card shadow-lg h-100 align-items-center">
                                                    <div class="card-body align-items-center d-flex px-3 py-6 p-md-8">
                                                        <div class="d-flex flex-column">
                                                            <figure class="px-md-3 px-xl-0 px-xxl-3 mb-0">
                                                                <img src="/pos/<%= p.img %>" alt="<%= p.name %>" />
                                                            </figure>
                                                            <div class="pt-5">
                                                                <div>
                                                                    <h1 class="text-center">
                                                                        <%= p.name %>
                                                                    </h1>
                                                                </div>
                                                                <div class="d-flex justify-content-center mx-auto pt-6">
                                                                    <a href="<%= p.url %>"
                                                                        class="btn btn-primary btn-sm text-white">
                                                                        Ödeme Yap
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--/.card-body -->
                                                </div>
                                            </div>
                                            <% } %>
                                                <% }) %>
                                </div>
                            </div>
                    </div>
                </section>
        </div>
        </div>
        <%- include('./components/footer'); -%>
            <%- include('./components/script'); -%>
    </body>

    </html>