<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Şartlar ve koşullar">
  <meta name="keywords" content="Şartlar ve koşullar">
  <meta name="author" content="elemis">
  <title>Şartlar ve koşullar</title>
  <link rel="shortcut icon" href="/assets/favicon.ico">
  <link rel="stylesheet" href="/assets/css/plugins.css">
  <link rel="stylesheet" href="/assets/css/style.css">
  <link rel="stylesheet" href="/assets/css/main.css">
  <link rel="preload" href="/assets/css/fonts/space.css" as="style" onload="this.rel='stylesheet'">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/dompurify@2.3.3/dist/purify.min.js"></script>
</head>

<body>
  <div class="content-wrapper bg-light">
    <%- include('./components/header'); -%>
      <section class="wrapper gradient-8 bg-lines">
        <div class="container pt-17 pt-md-19  text-center">
          <div class="row">
            <div class="col-lg-10 col-xl-9 col-xxl-8 mx-auto" data-cues="zoomIn" data-group="page-title"
              data-interval="-200" data-delay="500">
              <h1 class="display-1 fs-68 lh-xxs mb-8 text-white">
                Şartlar ve koşullar
              </h1>
            </div>
          </div>
        </div>
      </section>
      <div class="container mb-3">
        <div class="row gx-0">
          <aside class="col-xl-3 sidebar sticky-sidebar mt-md-0 py-16 d-none d-xl-block">
            <div class="widget">
              <nav id="sidebar-nav">
                <ul class="list-unstyled text-reset">
                  <% cookieList.forEach(blog=> { %>
                    <li><a class="nav-link scroll ">
                        <%=blog.title %>
                      </a></li>
                    <% }); %>
                </ul>
              </nav>
            </div>
          </aside>
          <div class="col-xl-8  mb-22">
            <% cookieList.forEach(blog => { %>
              <section id="<%= blog.title %>" class="wrapper pt-16">
                <div class="card">
                  <div class="card-body p-10">
                    <h2 class="mb-3">
                      <%= blog.title %>
                    </h2>
                    <div class="cookieContent">
                      <%- blog.desc %>
                    </div>
                  </div>
                </div>
              </section>
            <% }); %>
          </div>
        </div>
      </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var cookieContents = document.querySelectorAll('.cookieContent');
      cookieContents.forEach(function(cookieContent) {
        cookieContent.innerHTML = DOMPurify.sanitize(cookieContent.innerHTML);
      });
    });
  </script>
  
  <%- include('./components/footer'); -%>
    <%- include('./components/script'); -%>



</body>

</html>