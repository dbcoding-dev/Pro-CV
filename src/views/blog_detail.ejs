<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= blogDetail.desc %>">
  <meta name="keywords" content="<%= blogDetail.desc %>">
  <meta name="author" content="elemis">
  <title>Pro CV - <%= blogDetail.title %>
  </title>
  <link rel="shortcut icon" href="/assets/favicon.ico">
  <link rel="stylesheet" href="/assets/css/plugins.css">
  <link rel="stylesheet" href="/assets/css/style.css">
  <link rel="stylesheet" href="/assets/css/main.css">
  <link rel="preload" href="/assets/css/fonts/space.css" as="style" onload="this.rel='stylesheet'">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/dompurify@2.3.3/dist/purify.min.js"></script>

</head>

</head>

<body>
  <div class="content-wrapper bg-light">
    <%- include('./components/header'); -%>
      <section class="wrapper gradient-8 bg-lines">
        <div class="container pt-17 pt-md-19 pb-21  text-center">
          <div class="row">
            <div class="col-md-10 col-xl-8 mx-auto">
              <div class="post-header">
                <div class="post-category text-line">
                  <a href="#" class="hover text-white" rel="category">Pro Cv</a>
                </div>
                <h1 class="display-1 mb-4 text-white">
                  <%= blogDetail.title %>
                </h1>
                <ul class="post-meta mb-5">
                  <li class="post-date text-white"><i class="uil uil-calendar-alt"></i>
                    <span>
                      <% const options={ year: 'numeric' , month: 'long' , day: 'numeric' }; const formattedDate=new
                        Date(blogDetail.createdAt).toLocaleDateString('tr-TR', options); %>
                        <%= formattedDate %>
                    </span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="wrapper bg-light pb-18">
        <div class="container pb-14 pb-md-16">
          <div class="row">
            <div class="col-lg-10 mx-auto">
              <div class="blog single mt-n17">
                <div class="card">
                  <figure class="card-img-top"><img src="/blog/<%= blogDetail.img %>" alt=""></figure>
                  <div class="card-body">
                    <div class="classic-view">
                      <article class="post">
                        <div class="post-content mb-5" id="blogDetailContent">
                          <%- blogDetail.detail %>
                        </div>
                      </article>
                    </div>
                    <hr>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var blogDetailContent = document.getElementById('blogDetailContent');
      blogDetailContent.innerHTML = DOMPurify.sanitize(blogDetailContent.innerHTML);
    });
  </script>

  <%- include('./components/footer'); -%>
    <%- include('./components/script'); -%>

</body>

</html>