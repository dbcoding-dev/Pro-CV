<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Blog">
    <meta name="keywords" content="Blog">
    <meta name="author" content="elemis">
    <title>Blog</title>
    <link rel="shortcut icon" href="/assets/favicon.ico">
    <link rel="stylesheet" href="/assets/css/plugins.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="preload" href="/assets/css/fonts/space.css" as="style" onload="this.rel='stylesheet'">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>



<body>
    <div class="content-wrapper bg-light">
        <%- include('./components/header'); -%>

            <section class="wrapper gradient-8 bg-lines">
                <div class="container pt-17 pt-md-19 text-center">
                    <div class="row">
                        <div>
                            <h3 class="mb-3 text-center text-white" style="font-size: 50px;">Blog</h3>
                        </div>
                    </div>
                </div>
            </section>
            <section class="container mx-auto mt-18 mb-18">
                <div class="row mobile_blog">
                    <% for (let i=blogList.length - 1; i>= 0; i--) { %>
                        <div class="col-lg-6 mx-auto">
                            <div class="blog classic-view mt-n17">
                                <article class="post">
                                    <div class="card">
                                        <figure class="card-img-top overlay overlay-1 hover-scale">
                                            <a class="link-dark" href="/blog/<%= blogList[i].slug %>">
                                                <img src="/blog/<%= blogList[i].img %>" alt="">
                                            </a>
                                            <figcaption>
                                                <h5 class="from-top mb-0"></h5>
                                            </figcaption>
                                        </figure>
                                        <div class="card-body">
                                            <div class="post-header">
                                                <h2 class="post-title mt-1 mb-0">
                                                    <a class="link-dark" href="/blog/<%= blogList[i].slug %>">
                                                        <%= blogList[i].title %>
                                                    </a>
                                                </h2>
                                            </div>
                                            <div class="post-content">
                                                <p>
                                                    <%= blogList[i].desc.length> 50 ? blogList[i].desc.slice(0, 50) +
                                                        '...' : blogList[i].desc %>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <ul class="post-meta d-flex mb-0">
                                                <li class="post-date">
                                                    <i class="uil uil-calendar-alt"></i>
                                                    <% const options={ year: 'numeric' , month: 'long' , day: 'numeric'
                                                        }; const formattedDate=new
                                                        Date(blogList[i].createdAt).toLocaleDateString('tr-TR',
                                                        options); %>
                                                        <span>
                                                            <%= formattedDate %>
                                                        </span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        </div>
                        <% } %>
                </div>
            </section>
    </div>
    <%- include('./components/footer'); -%>
        <%- include('./components/script'); -%>
</body>

</html>