<%- include('../components/head'); -%>

<body>

  <%- include('../components/preloader'); -%>

  <div id="main-wrapper">
    <%- include('../components/nav'); -%>

    <%- include('../components/chatbox'); -%>
    <%- include('../components/header'); -%>


    <%- include('../components/sidebar'); -%>

    <div class="content-body">
      <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Blog Edit</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                          <form action="/panel/blog/<%= blog.id %>?_method=PUT" method="post" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="">Blog Order</label>
                                    <input type="number" class="form-control input-default " name="order" value="<%= blog.order %>">
                                </div>
                                <div class="mb-3">
                                    <label for="">Blog Title</label>
                                    <input type="text" class="form-control input-default " name="title" value="<%= blog.title %>">
                                </div>
                                <div class="mb-3">
                                    <label for="">Blog Desctiption</label>
                                    <textarea class="form-txtarea form-control" rows="8" id="comment" name="desc" ><%= blog.desc %></textarea>
                                </div>
                                <div class="mb-3">
                                    <label for="formFile" class="form-label">Blog Image</label>
                                    <input class="form-control" type="file" id="formFile" name="img">
                                  </div>
                                  <div class="mb-3 w-100">
                                    <img src="/blog/<%= blog.img %>?<%= Date.now() %>" alt="" class="w-50"> 
                                  </div>
                                  <div class="mb-3">
                                    <div class="card">
                                        <div class="card-header">
                                            <h4 class="card-title">Blog Details</h4>
                                        </div>
                                        <div class="card-body custom-ekeditor">
                                            <textarea id="ckeditor" name="detail" ><%= blog.detail %></textarea>
                                        </div>
                                    </div>
                                  </div>

                                  <div class="mb-3">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                  </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
    <%- include('../components/footer'); -%>
  </div>
  <%- include('../components/scripts'); -%>