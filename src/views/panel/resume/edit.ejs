<%- include('../components/head'); -%>

<body>

  <%- include('../components/preloader'); -%>

  <div id="main-wrapper">
    <%- include('../components/nav'); -%>

    <%- include('../components/chatbox'); -%>
    <%- include('../components/header'); -%>


    <%- include('../components/sidebar'); -%>

    <div class="content-body">
      <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Resume Edit</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                          <form action="/panel/resume/<%= resume.id %>?_method=PUT" method="post" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="">Resume Order</label>
                                    <input type="number" class="form-control input-default " name="order" value="<%= resume.order %>">
                                </div>
                                <div class="mb-3">
                                    <label for="">Resume Title</label>
                                    <input type="text" class="form-control input-default " name="title" value="<%= resume.title %>">
                                </div>
                                <div class="mb-3">
                                  <div class="card">
                                      <div class="card-header">
                                          <h4 class="card-title">Resume Desctiption</h4>
                                      </div>
                                      <div class="card-body custom-ekeditor">
                                          <textarea id="ckeditor" name="desc"><%= resume.desc %></textarea>
                                      </div>
                                  </div>
                                </div>
                                <div class="mb-3">
                                    <label for="formFile" class="form-label">Resume Image</label>
                                    <input class="form-control" type="file" id="formFile" name="img">
                                  </div>
                                  <div class="mb-3 w-100">
                                    <img src="/resume/<%= resume.img %>?<%= Date.now() %>" alt="" class="w-50"> 
                                  </div>
                                  <div class="mb-3">
                                    <label for="formFile" class="form-label">Resume PDF</label>
                                    <input class="form-control" type="file" id="formFile" name="pdf">
                                </div>
                                <div class="mb-3 w-100">
                                    <% if (resume.pdf) { %>
                                        <a href="/resume/<%= resume.pdf %>" target="_blank">View PDF</a>
                                    <% } else { %>
                                        No PDF uploaded
                                    <% } %>
                                </div>
                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                  </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
    <%- include('../components/footer'); -%>
  </div>
  <%- include('../components/scripts'); -%>